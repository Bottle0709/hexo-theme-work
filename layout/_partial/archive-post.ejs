<!-- 
   归档页
-->
<article class="archive-article archive-type-<%= post.layout %>">
  <div class="archive-article-inner">
    <header class="archive-article-header">
     <header class="archive-header">
          <% if (index && post.categories && post.categories.length){ %>
              <span class="header-cate">
                <i class="fa fa-book"></i>
                  <% post.categories.forEach(function (category) { %>
                  <a href="<%= config.root %>categories/<%= category.name.replace(/\s+/g, '') %>/"><%- category.name %></a>
                  <% }) %>
              </span>
          <% } %>
      </header>
      <%- partial('post/date', {class_name: 'archive-article-date', date_format: 'MM-DD'}) %>
      <%- partial('post/title', {class_name: 'archive-article-title'}) %>
    </header>
      <% if(post.tags && post.tags.length){ %>
        <div class="archive-post-footer">
            <%- partial('post/tag') %>      
        </div>
      <% } %>          
  </div>
</article>
